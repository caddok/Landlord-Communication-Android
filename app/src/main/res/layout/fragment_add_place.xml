<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.login.addplace.AddPlaceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_address"
            android:text="@string/address"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_enter_address"
            android:layout_below="@+id/tv_address"
            android:layout_marginTop="10dp"
            android:layout_marginStart="75dp"
            android:layout_width="225dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_edittext_style"
            android:layout_height="45dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_below="@+id/et_enter_address"
            android:layout_marginTop="30dp"
            android:text="@string/description"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_enter_description"
            android:layout_below="@+id/tv_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="225dp"
            android:layout_height="95dp"
            android:background="@drawable/login_edittext_style"
            android:inputType="text" />


        <TextView
            android:id="@+id/tv_rent_amount"
            android:text="@string/rent_amount"
            android:layout_below="@+id/et_enter_description"
            android:layout_marginTop="30dp"
            android:textSize="27sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_enter_amount"
            android:layout_below="@+id/tv_rent_amount"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_edittext_style"
            android:layout_width="225dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/tv_duedate"
            android:layout_below="@+id/et_enter_amount"
            android:text="@string/due_date"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_year"
            android:text="@string/year"
            android:layout_below="@+id/tv_duedate"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_enter_year"
            android:layout_below="@+id/tv_year"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_width="80dp"
            android:background="@drawable/login_edittext_style"
            android:layout_height="45dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_month"
            android:text="@string/month"
            android:layout_below="@+id/tv_duedate"
            android:layout_marginTop="10dp"
            android:layout_marginStart="150dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_enter_month"
            android:layout_below="@+id/tv_month"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_edittext_style"
            android:layout_marginStart="155dp"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_day"
            android:text="@string/day"
            android:layout_below="@+id/tv_duedate"
            android:layout_marginTop="10dp"
            android:layout_marginStart="295dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_enter_day"
            android:layout_below="@+id/tv_day"
            android:layout_marginTop="5dp"
            android:layout_marginStart="290dp"
            android:layout_width="70dp"
            android:background="@drawable/login_edittext_style"
            android:layout_height="45dp"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_tenant"
            android:layout_below="@+id/et_enter_month"
            android:text="@string/tenant_"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_select_tenant"
            android:layout_below="@+id/tv_tenant"
            android:background="@drawable/custom_pay_button"
            android:text="@string/select_tenant"
            android:layout_marginTop="40dp"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_black_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_below="@+id/btn_select_tenant"
            android:background="@drawable/custom_pay_button"
            android:text="@string/cancel_add"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="40dp"
            android:layout_marginStart="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_save"
            android:layout_below="@+id/btn_select_tenant"
            android:background="@drawable/custom_pay_button"
            android:text="@string/save"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="40dp"
            android:layout_marginStart="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.emredavarci.circleprogressbar.CircleProgressBar
            xmlns:cpb="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="413dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="53dp"
            cpb:backgroundColor="#e7b330"
            cpb:backgroundWidth="8"
            cpb:maxValue="100"
            cpb:prefix=""
            cpb:progressColor="#e76130"
            cpb:progressText="Loading..."
            cpb:progressTextColor="#f9916b"
            cpb:roundedCorners="true"
            cpb:strokeWidth="14"
            cpb:suffix="%"
            cpb:textSize="25sp"
            android:visibility="gone"/>



    </RelativeLayout>


</ScrollView>