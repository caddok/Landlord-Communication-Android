<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.login.selectplace.SelectPlaceFragment">

    <TextView
        android:id="@+id/tv_select_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_select_places_from_bellow"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25sp"
        android:gravity="center_horizontal"/>

    <ListView
        android:id="@+id/lv_places_no_tenant"
        android:layout_below="@+id/tv_select_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_ready"
        android:layout_marginTop="450dp"
        android:layout_marginStart="290dp"
        android:text="@string/ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</RelativeLayout>